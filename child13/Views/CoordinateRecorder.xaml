<Window x:Class="child13.Views.CoordinateRecorder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:child13.Views"
        mc:Ignorable="d"
        Title="CoordinateRecorder" Height="150" Width="200" Closing="Window_Closing">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock x:Name="TimerTextBlock" FontSize="30" HorizontalAlignment="Center" Margin="10"/>
        <Button Content="Start Timer" Click="StartTimerButton_Click" Width="100" Margin="10"/>
    </StackPanel>
</Window>
